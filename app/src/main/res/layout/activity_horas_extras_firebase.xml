<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".HorasExtrasFirebaseActivity">

    <EditText
        android:id="@+id/input_cod_he"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="CÃ³digo de las horas extras"
        android:inputType="textCapSentences" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mes"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/sp_meses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:entries="@array/lista_meses" />

    <EditText
        android:id="@+id/input_empleado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Empleado"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/input_cantidad_he"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Cantidad de horas extras"
        android:inputType="number" />

    <Button
        android:id="@+id/button11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="testCrash"
        android:text="Test crash" />
</LinearLayout>